<!-- ========= CSS ========= -->
<style>
.gift-popup{position:fixed;inset:0;background:rgba(0,0,0,.45);display:none;z-index:1000}
.gift-popup.is-open{display:block}
.gift-popup__card.gift-popup--figma{
  width:250px;background:#fff;border-radius:8px;border:1px solid #D9D9D9;
  box-shadow:0 6px 24px rgba(0,0,0,.15);
  position:absolute;top:50%;left:50%;transform:translate(-50%,-50%);
  padding:10px;font-family:'Jost',sans-serif;color:#111
}
.gift-popup__close{position:absolute;top:6px;right:8px;background:transparent;border:0;font-size:18px;cursor:pointer;color:#111}
.gift-head{display:grid;grid-template-columns:92px 1fr;column-gap:8px;margin-bottom:8px}
.gift-head__img{width:92px;height:92px;object-fit:cover;border-radius:8px}
.gift-head__title{font-size:12px;font-weight:500;margin:0 0 2px}
.gift-head__price{font-size:14px;font-weight:700;margin:0 0 4px}
.gift-head__desc{font-size:11px;line-height:1.45;color:#4B4B4B;margin:0}
.gift-field__label{display:block;font-size:12px;margin:10px 0 6px}
.gift-swatches{display:grid;grid-template-columns:1fr 1fr;gap:6px}
.gift-swatch{height:32px;border:1px solid #111;border-radius:4px;font-size:12px;cursor:pointer}
.gift-swatch.is-active{background:#000;color:#fff}
.gift-select{position:relative}
.gift-select select{width:100%;height:36px;border:1px solid #111;border-radius:4px;padding:0 34px 0 10px;font-size:12px}
.gift-select__chev{position:absolute;right:10px;top:50%;transform:translateY(-50%)}
.gift-cta{width:100%;height:40px;margin-top:10px;background:#000;color:#fff;border:0;border-radius:4px;
  font-size:12px;font-weight:700;cursor:pointer;display:flex;align-items:center;justify-content:center;gap:10px;text-transform:uppercase}
.gift-cta__arrow{width:18px;filter:brightness(0) invert(1)}
</style>

<!-- ========= JS ========= -->
<script>
(function(){
  function openPopup(id){var p=document.querySelector('.gift-popup[data-popup="'+id+'"]');if(p){p.classList.add('is-open');p.setAttribute('aria-hidden','false');}}
  function closePopup(p){p.classList.remove('is-open');p.setAttribute('aria-hidden','true');}
  document.addEventListener('click',function(e){
    var t=e.target.closest('[data-popup-open]'); if(t){e.preventDefault(); openPopup(t.getAttribute('data-popup-open'));}
    if(e.target.closest('.gift-popup__close')){ closePopup(e.target.closest('.gift-popup')); }
    else if(e.target.classList.contains('gift-popup')){ closePopup(e.target); }
  });
  document.addEventListener('keydown',function(e){if(e.key==='Escape'){document.querySelectorAll('.gift-popup.is-open').forEach(closePopup);}});
  document.addEventListener('click',function(e){
    var sw=e.target.closest('.gift-swatch'); if(!sw) return;
    var wrap=sw.closest('.gift-popup'); wrap.querySelectorAll('.gift-swatch').forEach(b=>b.classList.remove('is-active'));
    sw.classList.add('is-active');
  });
})();
</script>

