<!-- Product Popup -->
<div id="productPopupOverlay" class="popup-overlay " role="dialog" aria-modal="true" aria-labelledby="popupTitle">
  <div class="popup-content">
    <!-- Close -->
    <button id="closeProductPopup" class="popup-close-btn" aria-label="Close">×</button>

    <!-- Product -->
    <div class="product-container">
      <!-- Image -->
      <div class="product-image-section">
        <!-- استخدم الـ placeholder أو استبدله بصورة منتج -->
        <div class="product-image-placeholder"></div>
        <!-- أو:
        <img src="your-product.jpg" alt="Product" style="width:120px;height:160px;object-fit:cover;border-radius:8px;">
        -->
      </div>

      <!-- Details -->
      <div class="product-details-section">
        <h1 id="popupTitle" class="product-name">Orange Wide Leg</h1>
        <div class="product-price">980,00€</div>
        <p class="product-description">
          This one-piece swimsuit is crafted from jersey featuring an allover micro Monogram motif in relief.
        </p>

        <!-- Options -->
        <div class="product-options-container">
          <!-- Color -->
          <div class="option-group">
            <label class="option-title">Color</label>
            <div class="color-selector-container">
              <button type="button" class="color-option color-selected" data-color="white">White</button>
              <button type="button" class="color-option" data-color="black">Black</button>
            </div>
          </div>

          <!-- Size -->
          <div class="option-group">
            <label class="option-title">Size</label>
            <div class="size-selector-container">
              <div class="custom-dropdown" id="sizeDropdown">
                <button type="button" class="dropdown-trigger" id="sizeDropdownTrigger" aria-haspopup="listbox" aria-expanded="false">
                  <span id="sizeDropdownText" class="dropdown-text dropdown-placeholder">Choose your size</span>
                  <span class="dropdown-arrow-container">
                    <svg class="dropdown-arrow" id="sizeDropdownArrow" width="12" height="8" viewBox="0 0 12 8" aria-hidden="true">
                      <path d="M1 1L6 6L11 1" stroke="#666" stroke-width="1.5" stroke-linecap="round"/>
                    </svg>
                  </span>
                </button>
                <div class="dropdown-options" id="sizeDropdownOptions" role="listbox">
                  <button type="button" class="dropdown-option" role="option" data-size="xs">XS</button>
                  <button type="button" class="dropdown-option" role="option" data-size="s">S</button>
                  <button type="button" class="dropdown-option" role="option" data-size="m">M</button>
                  <button type="button" class="dropdown-option" role="option" data-size="l">L</button>
                  <button type="button" class="dropdown-option" role="option" data-size="xl">XL</button>
                  <button type="button" class="dropdown-option" role="option" data-size="xxl">XXL</button>
                </div>
