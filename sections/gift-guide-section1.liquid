{% comment %}
Gift Guide - Banner (Custom)
Page width: 1440px | height: 2000px
Contains:
- Section 1: navbar, frame1, frame2, footer
- Section 2: items grid with 6 popups
{% endcomment %}

{{ 'gift-guide.css' | asset_url | stylesheet_tag }}

<!-- Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Lustria&display=swap" rel="stylesheet">

<!-- Start Page -->
<div class="page">

  <!-- Section 1 -->
  <div class="section1">

    <!-- Navbar -->
    <div class='gift-top-bar'>
      <div>
        <img class="gift-icon--tisso"
             src="{{ 'tisso.svg' | asset_url }}"
             alt="Tisso Vison"
             width="151" height="19" loading="lazy">
      </div>

      <div class="gift-top-bar_message">
        Find the ideal gift for your loved ones.
      </div>

      <button class="gift-button gift-button--highlight" id="gift-topbar-cta" type="button">
        <span class="gift-icon--arrow-text">CHOOSE GIFT</span>
        <img class="gift-icon gift-icon--arrow"
             src="{{ 'Arrow.svg' | asset_url }}"
             alt="" aria-hidden="true"
             width="24" height="1" loading="lazy">
      </button>
    </div>

    <!-- Frame 1 -->
    <div class="firstframe">
      <img class="imageinframe"
           src="{{ 'Frame.svg' | asset_url }}"
           alt="image in section 1"
           width="10" height="10" loading="eager">
    </div>

    <!-- Frame 2 -->
    <div class="secondframe">
      <!-- النص -->
      <div class="gift-hero__copy">
        <h2 class="gift-hero__title">The Gift Guide</h2>
        <p class="gift-hero__text">
          Discover Joy: Your Ultimate Holiday Gift Destination.
          Explore our curated selection and find the perfect gifts to
          delight your loved ones this holiday season.
        </p>
        <a href="/collections/gift-guide" class="gift-btn">SHOP NOW →</a>
      </div>

      <!-- الصورة -->
      <div class="gift-hero__art">
        <img src="{{ 'Frame.png' | asset_url }}" alt="image in section 1" class="gift-hero__img"> 
      </div>
    </div>

    <!-- Ticker -->
    <div class="gift-hero__ticker">
      SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL
    </div>

  </div>
  <!-- End Section 1 -->

  <!-- Section 2 -->
  <div class="section2">
    <section class="part-two">
      <h2 class="wild-title">Tisso vison in the wild</h2>

      <div class="grid-container">
        {% for i in (1..6) %}
        <div class="grid-item">
          <img src="{{ 'image 82' | append: i | append: '.svg' | asset_url }}" alt="Look {{ i }}">
          <span class="plus-icon{{ i }}" data-popup-open="look-{{ i }}" role="button" tabindex="0">
            <img class="plusimage" src="{{ 'plus.svg' | asset_url }}" alt="">
          </span>
        </div>
        {% endfor %}
      </div>
    </section>
  </div>
  <!-- End Section 2 -->

  <!-- Popups -->
  {% assign looks = "Orange Wide Leg,Tailored Jacket,Accordion Pleated Dress,Green Trench Coat,Tennis Blue T-Shirt,Long Sleeve Tennis Top" | split: "," %}
  {% for i in (1..6) %}
  <div class="gift-popup" data-popup="look-{{ i }}" aria-hidden="true">
    <div class="gift-popup__card gift-popup--figma">
      <button class="gift-popup__close" type="button" aria-label="Close">×</button>

      <div class="gift-head">
        <img class="gift-head__img" src="{{ 'image 82' | append: i | append: '.svg' | asset_url }}" alt="{{ looks[i-1] }}">
        <div class="gift-head__meta">
          <h4 class="gift-head__title">{{ looks[i-1] }}</h4>
          <div class="gift-head__price">980,00€</div>
          <p class="gift-head__desc">This is the description for {{ looks[i-1] }}.</p>
        </div>
      </div>

      <!-- Colors -->
      <label class="gift-field__label">Color</label>
      <div class="gift-swatches">
        <span class="cwhite"></span><button type="button" class="gift-swatch">White</button>
        <span class="cblack"></span><button type="button" class="gift-swatch">Black</button>
      </div>

      <!-- Size Select -->
      <label for="size-{{ i }}" class="gift-field__label">Size</label>
      <div class="gift-select">
        <select id="size-{{ i }}" required>
          <option value="" disabled selected>Choose your size</option>
          <option value="XS">XS</option>
          <option value="S">S</option>
          <option value="M">M</option>
          <option value="L">L</option>
          <option value="XL">XL</option>
        </select>
        <span class="gift-placeholder">Choose your size</span>
        <div class="gift-select__chev">
          <div class="divider"></div>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none">
            <polyline points="6 9 12 15 18 9"></polyline>
          </svg>
        </div>
      </div>

      <!-- CTA -->
      <button class="gift-cta" type="button">
        ADD TO CART
        <img class="gift-cta__arrow" src="{{ 'Arrow.svg' | asset_url }}" alt="">
      </button>
    </div>
  </div>
  {% endfor %}

</div>
<!-- End Page -->

<!-- Scripts -->
{{ 'gift-guide-section1.js' | asset_url | script_tag }}

