<style>
.gift-popup{position:fixed;inset:0;background:rgba(0,0,0,.45);display:none;z-index:1000}
.gift-popup.is-open{display:block}
.gift-popup__card{width:250px;background:#fff;border-radius:12px;border:1px solid #E5E7EB;
  box-shadow:0 8px 30px rgba(0,0,0,.15);position:absolute;top:50%;left:50%;transform:translate(-50%,-50%);
  padding:12px;font-family:'Jost',sans-serif;color:#111}
.gift-popup__close{position:absolute;top:8px;right:10px;width:28px;height:28px;border-radius:50%;
  background:#F3F4F6;border:1px solid #E5E7EB;font-size:18px;cursor:pointer}
.gift-popup__media{position:relative}
.gift-popup__img{width:100%;height:150px;object-fit:cover;border-radius:10px}
.gift-chip{position:absolute;top:8px;left:8px;width:16px;height:16px;border-radius:50%;border:2px solid #fff;
  box-shadow:0 0 0 1px rgba(0,0,0,.15)}
.gift-popup__title{font-size:15px;font-weight:500;margin:10px 0 2px}
.gift-popup__price{font-size:14px;font-weight:500;margin-bottom:6px}
.gift-popup__desc{font-size:12px;line-height:1.5;color:#5B5B5B;margin-bottom:10px}
.gift-popup__label{display:block;font-size:12px;color:#111;margin:8px 0 6px}
.gift-popup__swatches{display:flex;gap:8px}
.swatch{position:relative;font-size:12px;padding:10px 12px 10px 30px;
  border:1px solid #111;background:#fff;color:#111;border-radius:4px;cursor:pointer}
.swatch::before{content:"";position:absolute;top:50%;left:10px;transform:translateY(-50%);
  width:12px;height:12px;border-radius:2px;background:var(--swatch-color,#000)}
.swatch.is-active{background:#000;color:#fff;border-color:#000}
.swatch.is-active::before{display:none}
.gift-popup__select select{width:100%;padding:10px 12px;font-size:12px;color:#111;
  border:1px solid #111;border-radius:4px}
.gift-popup__cta{width:100%;margin-top:12px;height:44px;background:#000;color:#fff;
  border:0;border-radius:6px;font-weight:500;cursor:pointer}
</style>

<script>
document.addEventListener('DOMContentLoaded', function(){
  function initPopupColors(scope){
    (scope||document).querySelectorAll('.gift-popup').forEach(function(popup){
      popup.querySelectorAll('.swatch').forEach(function(btn){
        var c=btn.dataset.color||'#000';
        btn.style.setProperty('--swatch-color',c);
      });
      var active=popup.querySelector('.swatch.is-active');
      if(active){
        var chip=popup.querySelector('.gift-chip');
        if(chip){ chip.style.backgroundColor=active.dataset.color||'#000'; }
      }
    });
  }
  document.body.addEventListener('click',function(e){
    var sw=e.target.closest('.swatch'); if(!sw) return;
    var wrap=sw.closest('.gift-popup'); if(!wrap) return;
    wrap.querySelectorAll('.swatch').forEach(function(b){b.classList.remove('is-active');});
    sw.classList.add('is-active');
    var chip=wrap.querySelector('.gift-chip'); if(chip){chip.style.backgroundColor=sw.dataset.color||'#000';}
  });
  initPopupColors();
  document.body.addEventListener('click',function(e){
    var trg=e.target.closest('[data-popup-open]'); if(!trg) return;
    setTimeout(function(){initPopupColors();},0);
  },true);
});
</script>

