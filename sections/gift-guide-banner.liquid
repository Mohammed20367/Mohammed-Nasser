{% comment %}
  Section: Hero Banner with Text
  Description: Custom hero banner with title, subtitle, and CTA buttons
{% endcomment %}

<div class="hero-banner">
  <div class="hero-content">
    <h1 class="hero-title">{{ section.settings.title }}</h1>
    <p class="hero-subtitle">{{ section.settings.subtitle }}</p>
    
    <div class="hero-buttons">
      <a href="{{ section.settings.cta1_url }}" class="btn-primary">
        {{ section.settings.cta1_text }} →
      </a>
      <a href="{{ section.settings.cta2_url }}" class="btn-secondary">
        {{ section.settings.cta2_text }} →
      </a>
    </div>
    
    <p class="hero-message">{{ section.settings.bottom_message }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "cta1_text",
      "label": "First CTA Text",
      "default": "Choose gift"
    },
    {
      "type": "url",
      "id": "cta1_url",
      "label": "First CTA Link"
    },
    {
      "type": "text",
      "id": "cta2_text",
      "label": "Second CTA Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "cta2_url",
      "label": "Second CTA Link"
    },
    {
      "type": "text",
      "id": "bottom_message",
      "label": "Bottom Message",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO AXL"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}